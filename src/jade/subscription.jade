//- subscription.jade

include ../includes/_mixins

doctype html
html(lang="ru")
	- var title = "Почта России – подписка на газеты и журналы"

	include ../includes/_head

	body
		img(src="/src/images/Subs_search_8_1.jpg" alt="" style="left: 210px; opacity: 0.5; position: absolute; top: 0; z-index: 9999; display: none;")
		include ../includes/_header
		include ../includes/_search

		// content
		section.b-content(role="main")

			// nav
			nav.b-nav
				.row
					.small-5.small-centered.columns
						ul
							li: a.active(href="#") Подборки
							li
								a(href="#") По алфавиту
								i.icon-Dropdown
							li: a(href="#") По теме
			// /nav

			// new-popular-magazines
			section.b-new-popular-magazines
				.row
					.small-10.columns
						h2 Новые и популярные журналы

					.small-2.columns
						.text-right
							a.more
								| Ещё 35
							i.icon-More

				.row
					.small-9.columns
						.row
							.small-4.columns
								+block-magazine

							.small-4.columns
								+block-magazine

							.small-4.columns
								+block-magazine

						.row
							.small-4.columns
								+block-magazine

							.small-4.columns
								+block-magazine

							.small-4.columns
								+block-magazine

					.small-3.columns
						.b-publishing-house
							a(href="#")
								p.b-publishing-house__heading.b-publishing-house__heading--tt издательство
								img.logo(src="/src/images/publishing-house1.png")
								.b-publishing-house__logs
									img(src="/src/images/photo-magazine1.jpg")
									img(src="/src/images/photo-magazine1.jpg")
									img(src="/src/images/photo-magazine1.jpg")
								p.b-publishing-house__title Аргументы и факты

								.b-publishing-house__show
									i.icon-show
									span Показать

			// /new-popular-magazines

			// selection
			.row
				.small-12.columns
					section.b-selection
						a(href="#")
							.row
								.small-7.columns
									img(src="/src/images/selection-book1.jpg")
									img(src="/src/images/selection-book2.jpg")
									img(src="/src/images/selection-book3.jpg")
								.small-5.columns
									p.b-selection__choice комплект
									h3.b-selection__heading Авторитетные российские журналы по&nbsp;налогообложению и&nbsp;бухгалтерскому учету
									p.b-selection__tagline Все, что нужно бухгалтеру в&nbsp;практической работе. Примеры, образцы и&nbsp;готовые решения, как поступать в&nbsp;неоднозначных ситуациях.
									.btn.btn__primary.btn--cart
										i.icon-shoppingcart
										| В корзину

			// /selection

			// press city
			section.b-press-city
				.row
					.small-10.columns
						h2 Пресса Самары
					.small-2.columns
						.text-right
							a.more
								| Ещё 5
							i.icon-More

				.row
					.small-6.columns
						- var bigRed = true
						+block-magazine()(class="b-block-magazine--red b-block-magazine--big")

					.small-3.columns
						- var bigRed = false
						- var newspaper = true
						+block-magazine

					.small-3.columns
						- var newspaper = true
						+block-magazine
