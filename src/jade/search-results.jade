//- search-result.jade

include ../includes/_mixins

doctype html
html(lang="ru")
	- var title = "Почта России – результаты поиска"

	include ../includes/_head

	body
		include ../includes/_header

		// content
		section.b-content(role="main")

			// nav
			nav.b-nav.b-nav--cart
				.row
					.small-12.columns
						ul
							li
								i.icon-back
								a(href="#") В каталог изданий

			// /nav

			// search
			section.b-search.b-search--internal.text-center
				.b-search__wrapper
					input(type="text", placeholder="Поиск по индексу, названию, теме или издателю")
					.btn
						i.icon-Search

				nav.b-nav

					.row
						.small-5.small-centered.columns
							ul
								li: a.active(href="#") Все
								li
									a(href="#") Журналы и газеты
								li: a(href="#") Темы

			// /search

			section.b-results.b-search-results
				.row
					.small-12.columns

							article.b-search-results__item
								h2 Журналы и газеты
								- var setImg = true
								+results("Комплект", "ЖКХ: журнал руководителя и главного бухгалтера + Жилищно-коммунальное хозяйство: бухгалтерский учет и налогообложение")
								- var setImg = false
								+results("Журнал", "ЖКХ: журнал руководителя и главного бухгалтера + Жилищно-коммунальное хозяйство: бухгалтерский учет и налогообложение")
								- var setImg = true
								+results("Комплект", "ЖКХ: журнал руководителя и главного бухгалтера + Жилищно-коммунальное хозяйство: бухгалтерский учет и налогообложение")

							article.b-search-results__item
								h2 Издания на тему «Военное дело»
								- var setImg = false
								+results("Журнал", "ЖКХ: журнал руководителя и главного бухгалтера + Жилищно-коммунальное хозяйство: бухгалтерский учет и налогообложение")


				.row
					.small-12.columns
						.b-show-more
							a(href="#") Показать ещё

			.row
				.small-12.column

					// recently viewed
					section.b-recently-viewed
						.row
							.small-12.columns
								h2 Вы недавно смотрели
						.row
							.small-2.columns
								+block-recently-viewed
							.small-2.columns
								+block-recently-viewed
							.small-2.columns
								+block-recently-viewed
							.small-2.columns
								+block-recently-viewed
							.small-2.columns
								+block-recently-viewed
							.small-2.columns
								+block-recently-viewed
					// /recently viewed

		// /content

		// footer
		include ../includes/_footer
		// /footer