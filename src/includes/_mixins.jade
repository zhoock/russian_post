mixin block-magazine()
	.b-block-magazine(class={elVersion: elVersion === "active"})&attributes(attributes)
		a(href="#").js-trigger-modal
			figure
				if mobile
					img.magazine(src="/src/images/photo-magazine1.jpg")
					img.tablet(src="/src/images/tablet1.jpg")
					figcaption Хозяйство черноземья

					if newspaper
						.b-description Ежедневная газета
					else
						.b-description
							div Журнал с эл. версией
							div 1 раз в 6 мес.

					.b-price
						span.b-price__book
							i.icon-book
							| от 1220 &#8381;
						span.b-price__mobile
							i.icon-mobile
							| от 1220 &#8381;

				else if publishingHouse
					.text-center
						.publishingHouse издательство
						img.magazine(src="/src/images/photo-magazine4.jpg")
						figcaption Аргументы и факты

				else if bigRed
					.text-center
						.b-block-magazine__together издательство
						img(src="/src/images/publishing-house-name.png")
						.b-block-magazine__logs
							img(src="/src/images/photo-magazine1.jpg")
							img(src="/src/images/photo-magazine1.jpg")
							img(src="/src/images/photo-magazine1.jpg")

				else if bigWhite
					.text-center
						.b-block-magazine__together комплект

						.b-block-magazine__logs--package
							img(src="/src/images/photo-magazine1.jpg")
							img(src="/src/images/photo-magazine1.jpg")
							img(src="/src/images/photo-magazine1.jpg")
						figcaption Про здоровье, Про кухню, Аргументы и факты
						.b-description Подписка на 6 месяцев
						span.b-price__book
							//i.icon-book
							span.strike 1220 &#8381;
							| 800 &#8381;

				else if magazinePlaceholder
