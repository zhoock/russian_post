mixin cartItem(together, title, period, address, name, addInstance, subscription)
	.b-block-magazine&attributes(attributes)

		if restoreSubscription
			a(href="#").link-restore Восстановить

		else
			i.icon-Item_pop_close

		a(href="#", class={restore: restoreSubscription === "active"})
			figure
				.b-block-magazine__cover
					.b-block-magazine__logs--package

						if setImg
							img(src="/src/images/photo-magazine1.jpg")
							img(src="/src/images/photo-magazine1.jpg")
							img(src="/src/images/photo-magazine1.jpg")
						else
							img(src="/src/images/photo-magazine1.jpg")

				.b-block-magazine__data
					.b-block-magazine__together= together
					figcaption= title
					.b-block-magazine__period= period
					.b-description

						if periodСlosed
							i.icon-Alert
							=" "
							= subscription

					.b-block-magazine__address= address
					.b-block-magazine__name= name
					.b-block-magazine__add-instance= addInstance

						if periodСlosed
							.btn.btn__change-period Изменить период

						else
							.b-price
								.b-price__book от 1670 &#8381;


